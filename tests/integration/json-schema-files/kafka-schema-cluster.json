{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
    "name",
    "protocol_version",
    "integration_version",
    "data"
  ],
  "properties": {
    "name": {
      "minLength": 1,
      "pattern": "^com.newrelic.kafka$",
      "type": "string"
    },
    "protocol_version": {
      "minLength": 1,
      "pattern": "^3$",
      "type": "string"
    },
    "integration_version": {
      "minLength": 1,
      "pattern": "^[0-9]+.[0-9]+.[0-9]+$",
      "type": "string"
    },
    "data": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "type": "object",
            "required": [
              "entity",
              "metrics",
              "inventory",
              "events"
            ],
            "properties": {
              "entity": {
                "type": "object",
                "required": [
                  "name",
                  "type"
                ],
                "properties": {
                  "name": {
                    "minLength": 1,
                    "pattern": "^ka-cluster$",
                    "type": "string"
                  },
                  "type": {
                    "minLength": 1,
                    "pattern": "^kafka:cluster$",
                    "type": "string"
                  },
                  "id_attributes": {
                    "type": "array"
                  }
                }
              },
              "metrics": {
                "type": "array",
                "uniqueItems": true,
                "items": {
                  "anyOf": [
                    {
                      "type": "object",
                      "required": [
                        "displayName",
                        "entityName",
                        "event_type",
                        "clusterName"
                      ],
                      "properties": {
                        "cluster.activeBrokerCount": {
                          "type": ["number", "null"]
                        },
                        "cluster.offlinePartitionsCount": {
                          "type": ["number", "null"]
                        },
                        "cluster.preferredReplicaImbalanceCount": {
                          "type": ["number", "null"]
                        },
                        "cluster.globalTopicCount": {
                          "type": ["number", "null"]
                        },
                        "cluster.globalPartitionCount": {
                          "type": ["number", "null"]
                        },
                        "cluster.activeControllerCount": {
                          "type": ["number", "null"]
                        },
                        "cluster.uncleanLeaderElectionsPerSecond": {
                          "type": ["number", "null"]
                        },
                        "cluster.numGroups": {
                          "type": ["number", "null"]
                        },
                        "cluster.numOffsets": {
                          "type": ["number", "null"]
                        },
                        "cluster.numGroupsPreparingRebalance": {
                          "type": ["number", "null"]
                        },
                        "cluster.id": {
                          "type": ["string", "null"]
                        },
                        "displayName": {
                          "type": "string"
                        },
                        "entityName": {
                          "type": "string"
                        },
                        "clusterName": {
                          "type": "string"
                        },
                        "event_type": {
                          "type": "string",
                          "pattern": "^KafkaClusterSample$"
                        },
                        "collectedFrom": {
                          "type": "string"
                        }
                      }
                    }
                  ]
                }
              },
              "inventory": {
                "type": "object",
                "properties": {}
              },
              "events": {
                "type": "array"
              }
            }
          }
        ]
      }
    }
  }
}
